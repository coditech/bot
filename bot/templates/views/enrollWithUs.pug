extends ../layouts/page

block css
    link(rel='stylesheet', type='text/css', href='/styles/selectDropdown.css')


block content
    .container.text-center
        h2.title-sec  Request Services

        .row
            .col-md-8
                form#enrollWithUsFormForm.matx-form-valid.contact-form(action='#', method='post')
                    input(type='hidden', name='action', value='enroll_with_us')
                    .row
                        .col-sm-12.col-md-6
                            .mdl-textfield.mdl-js-textfield
                                input#contactName.input-red.mdl-textfield__input(type='text', name='contactName')
                                label.label-black.mdl-textfield__label(for='contactName') Name
                        .col-sm-12.col-md-6
                            .mdl-textfield.mdl-js-textfield
                                input#contactEmail.input-red.mdl-textfield__input(type='text', name='contactEmail')
                                label.label-black.mdl-textfield__label(for='contactEmail') Email
                    .row
                        .col-sm-6
                            .mdl-textfield.mdl-js-textfield
                                input#contactPhoneNumber.input-red.mdl-textfield__input(type='text', name='contactPhoneNumber')
                                label.label-black.mdl-textfield__label(for='contactPhoneNumber') Phone Number
                    .row
                        .col-sm-6
                            .mdl-textfield.mdl-js-textfield.mdl-select
                                label.label-black.mdl-textfield__label(for='contactArea') Location
                                div.form-input-select
                                    select#contactArea.mdl-switch__input(name='contactArea')
                                        option(value='') (select one)
                                        each type in contactArea
                                            option(value=type.value, selected=formData.contactArea === type.value)= type.label

                    .row
                        .col-sm-12
                            .text-center(style="margin-top: 30px")
                                button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.btn-black.btn-default.btn-submit(disabled='', style="") send

            .col-md-4.contact-info-start
                .section-common-space
                    h2.section-title CONTACT US
                        .contact-info
                        .clearfix.ci-items
                            span.ci-icons
                                i.zmdi.zmdi-home
                            address Pierre Gemayel Street, Bldg S.E.A. 3, First Floor, Dawra, Beirut
                        .clearfix.ci-items
                            span.ci-icons
                                i.zmdi.zmdi-email
                            address info@bo.today
                        .clearfix.ci-items
                            span.ci-icons
                                i.zmdi.zmdi-phone
                            address +961 1 255 217

