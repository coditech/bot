// start blog post section
section.primary-bg-color.blog-post-section
    .section-common-space
        .container
            // start section title
            .text-center.section-heading
                h2.section-title BLOG POST
                h3.section-subtitle Check what's new in the world of web development and design trends
            // end section title
            .row.blog-post-grid
                each post, index in blogPosts
                    // start single blog post
                    article.col-xxs-12.col-xs-6.col-sm-4.single-blog-post
                        .mdl-card.jumbo-shadow.mdl-shadow--2dp
                            .post-thumb-wrap
                                // blog post thumbnail
                                img(src=post.image.url, alt=post.title)
                                .post-meta-info
                                    // post date
                                    span.post-meta-date=post.publishedDate
                            .post-content-wrap
                                // blog post title
                                h2.mdl-card__title-text.mdl-card__title-content
                                    a(href='/blog/' + post.c)=post.title
                                // blog post content
                                .mdl-card__supporting-text
                                    p=post.content.brief
                            .mdl-card__actions.mdl-card--border
                                // blog post comment number
                                //a.blog-comments(href='#') 5 Comments
                                a#post-1.blog-share
                                    i.zmdi.zmdi-share
                                // start blog post social icons
                                ul.mdl-menu.mdl-menu--bottom-right.mdl-js-menu.mdl-js-ripple-effect.post-share-media.js-post-share-media(data-for='post-1')
                                    li.fb
                                        a(href='blog/single/single.html')
                                            i.zmdi.zmdi-facebook-box
                                            span Facebook
                                    li.tw
                                        a(href='blog/single/single.html')
                                            i.zmdi.zmdi-twitter-box
                                            span Twitter
                                    li.gplus
                                        a(href='blog/single/single.html')
                                            i.zmdi.zmdi-google-plus-box
                                            span Google plus
                                    li.lin
                                        a(href='blog/single/single.html')
                                            i.zmdi.zmdi-linkedin-box
                                            span Linked In
                                // end blog post social icons
                    // end single blog post

// view all blog page button
.text-center.view-blog-post.wow.fadeInUpSmall(data-wow-duration='1s')
    a.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.btn-default.btn-highlight(href='blog/blog-standard.html') View all
// end blog post section