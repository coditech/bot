mixin fetchPartnersSlider(partners)
    //  start clients or logo slider
    section.secondary-bg-color.clients
        .section-common-space.text-center
            h2.section-title Clients
            .container
                .row
                    .client-slider(data-action='clientSlider')
                        if partners
                            each partner, index in partners
                                .col-sm-3
                                    .single-clients
                                        img(src=partner.logo.url, alt=partner.name)
    //  start clients or logo slider