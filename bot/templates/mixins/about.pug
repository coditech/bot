    -console.log(sliders)
    section#home.section-main
        #matx_revslider_1_wrapper.rev_slider_wrapper.fullwidthbanner-container(data-alias='web-product-light-hero66', style='margin:0px auto;background-color:transparent;padding:0px;margin-top:0px;margin-bottom:0px;')
