mixin fetchServiceSlider(services)
    // start service section
    section#about.section-main
        // start intro section with icon box
        section.dark-section.overflow-hidden.boderd-intro-imodules
            .section-common-space.text-center
                h2 Services
                .container
                    .row
                        if services && services.length
                            - var cutoff = services.length-services.length%3
                            - var services1 = services.slice(0,cutoff)
                            - var services2 = services.slice(cutoff)
                            each service, index in services1
                                .col-sm-4.col-xs-6.service
                                    a(href='/services#' + service.slug.split('-').join('_') )
                                        // start bordered icon box
                                        .single-imodule.imodule-centerd.rbodard-imodule.wow.fadeInUp(data-wow-duration='1s')
                                            .icon-box
                                                i(class=service.icon)
                                            .ic-module-content
                                                h3.imodule-title=service.title
                                                p=service.briefDescription
                                        // end bordered icon box
                            - var numberOfItems = services2.length
                            if services2.length
                                - var classes = (numberOfItems == 1 ? "col-sm-push-4" : "col-sm-push-2")
                                each service, index in services2
                                    .col-sm-4.col-xs-6.service(class=classes)
                                        a(href='/services#' + service.slug.split('-').join('_') )
                                            // start bordered icon box
                                            .single-imodule.imodule-centerd.rbodard-imodule.wow.fadeInUp(data-wow-duration='1s')
                                                .icon-box
                                                    i(class=service.icon)
                                                .ic-module-content
                                                    h3.imodule-title=service.title
                                                    p=service.briefDescription
                                            // end bordered icon box
        // end intro section with icon box
    // end service section
mixin fetchServices(services)
    each service, length in services
        .row(id=service.slug.split('-').join('_')).dark-section.overflow-hidden.boderd-intro-imodules.serviceItem
            .col-sm-4
                .single-imodule.imodule-centerd.rbodard-imodule.wow.fadeInUp(data-wow-duration='1s')
                    .icon-box
                        i(class=service.icon)
                    .ic-module-content
                        h3.imodule-title=service.title

            .col-sm-8
                !=service.categoryComponents

